<div class="all">
  <div id="content">
    <div class="container">
      <div class="row">
        <div id="basket" class="col-lg-9">
          <div class="box">
            <h1>Shopping cart</h1>
            <% if !@user_cart.empty? %>
              <p class="text-muted">
                You currently have <%= @user_cart.count %> item(s) in your cart.
              </p>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <hr class="mb-0" />
                      <th colspan="2">Product</th>
                      <th>Quantity</th>
                      <th>Unit price</th>
                      <th colspan="2">Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @user_cart.each do | item | %>
                      <tr>
                        <td>
                          <%= link_to image_tag(item.book.image), book_path(item.book.id) if item.book.image.attached? %>
                        </td>
                        <td>
                          <%= link_to item.book.title, book_path(item.book.id) %>
                        </td>
                        <td>
                          <input name="quantity" type="number" value=<%= item.quantity %> min="1" class="form-control quantity" />
                        </td>
                        <td>
                          ₹<span class="price"><%= item.book.price %></span>
                        </td>
                        <td>
                          ₹<span class="total"><%= item.book.price * item.quantity %></span>
                        </td>
                        <td>
                          <%= link_to cart_path(item.id), method: :delete do  %>
                            <i class="fa fa-trash-o ps-4"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th colspan="4">Sub-Total</th>
                      <th colspan="2">₹<%= @user_cart.map(&:total_price).sum %></th>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.table-responsive-->
              <div
                    class="box-footer d-flex justify-content-between flex-column flex-lg-row"
                  >
                <div class="left">
                  <%= link_to books_path, class: "btn btn-outline-secondary" do %>
                    <i class="fa fa-chevron-left"></i> Continue shopping
                  <% end %>
                </div>
                <div class="right">
                  <button type="submit" class="btn btn-primary">
                    Place Order
                  </button>
                </div>
              </div>
            <% else %>
              <hr>
              <h3 class="mt-5">Cart is empty!</h3>
            <% end %>
          </div>
        </div>

        <div class="col-lg-3">
          <div id="order-summary" class="box">
            <div class="box-header">
              <h3 class="mb-0">Order summary</h3>
              <hr />
            </div>
            <p class="text-muted">
              Shipping and additional costs are calculated based on the
              values you have entered.
            </p>
            <div class="table-responsive">
              <table class="table">
                <tbody>
                  <tr>
                    <td>Order subtotal</td>
                    <th class="text-end">₹<%= @user_cart.map(&:total_price).sum %></th>
                  </tr>
                  <tr>
                    <td>Shipping and handling</td>
                    <th class="text-end">₹<%= @shipping_cost %></th>
                  </tr>
                  <tr>
                    <td>Total</td>
                    <th class="text-end">₹<%= @user_cart.map(&:total_price).sum + @shipping_cost %></th>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="box">
            <div class="box-header">
              <h4 class="mb-0">Coupon code</h4>
            </div>
            <p class="text-muted">
              If you have a coupon code, please enter it in the box below.
            </p>
            <form>
              <div class="input-group">
                <input type="text" class="form-control" />
                <button type="button" class="btn btn-primary">
                  <i class="fa fa-gift"></i>
                </button>
              </div>
              <!-- /input-group-->
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- *** id="content" end *** -->
  </div>
