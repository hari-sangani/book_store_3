<div class="all">
  <div id="content">
    <div class="container">
      <div class="row">
        <%= render "layouts/category_menu" %>

        <div class="col-lg-9">
          <div class="row products">
            <% @books.each do | book |%>
              <div class="col-lg-4 col-md-6">
                <div class="product">
                  <div class="card">
                    <%= link_to image_tag(book.image, class: "card-img-top"), book_path(book.id) if book.image.attached? %>
                    <div class="card-body">
                      <h5 class="card-title"><%= book.title.truncate(20) %></h5>
                      <p class="card-text author-name">by
                        <% book.authors.each do | author | %>
                          <%= author.name %>
                        <% end %>
                      </p>
                      <p class="card-text price">â‚¹<%= book.price %></p>
                      <div class="pb-2">
                        <%= link_to "View Details", book_path(book.id), class: "btn btn1" %>
                      </div>
                      <% if user_signed_in? %>
                        <%= link_to carts_path, class: "btn btn-primary navbar-btn" do %>
                          <i class="fa fa-shopping-cart"></i> Add to Cart
                        <% end %>
                      <% else %>
                        <%= link_to user_session_path, class: "btn btn-primary navbar-btn" do %>
                          <i class="fa fa-shopping-cart"></i> Add to Cart
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <%= render "layouts/pagy" %>

          </div>
        </div>
      </div>
    </div>
    <!-- *** id="content" end *** -->
  </div>
